{
	"name": "image-tools",
	"private": true,
	"version": "0.1.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"typecheck": "tsc -noEmit",
		"lint": "eslint \"src/**/*.{ts,tsx}\" --max-warnings=0",
		"lint:fix": "eslint \"src/**/*.{ts,tsx}\" --fix",
		"test": "vitest run --pool threads --poolOptions threads.singleThread=true",
		"test:watch": "vitest --pool threads --poolOptions threads.singleThread=true --watch",
		"build": "vite build",
		"preview": "vite preview",
		"validate": "bun run lint && bun run typecheck && bun run test"
	},
	"dependencies": {
		"@headlessui/react": "^2.2.8",
		"@tanstack/react-query": "^5.89.0",
		"@tanstack/react-router": "^1.131.48",
		"@types/react": "^19.1.13",
		"@types/react-dom": "^19.1.9",
		"react": "^18.3.1",
		"react-dom": "^18.3.1"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^7.18.0",
		"@typescript-eslint/parser": "^7.18.0",
		"@vitejs/plugin-react": "^4.7.0",
		"autoprefixer": "^10.4.21",
		"eslint": "^8.57.1",
		"eslint-config-prettier": "^9.1.2",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^4.6.2",
		"jsdom": "^24.1.3",
		"postcss": "^8.5.6",
		"tailwindcss": "^3.4.17",
		"tsx": "^4.20.5",
		"typescript": "^5.9.2",
		"vite": "^5.4.20",
		"vitest": "^2.1.9"
	}
}
